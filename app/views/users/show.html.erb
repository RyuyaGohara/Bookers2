<h2>User info</h2>
<%= image_tag @user.get_profile_image %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= current_user.introduction %></th>
  </tr>
</table>

<%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>


<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
