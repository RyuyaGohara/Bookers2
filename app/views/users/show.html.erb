<div>
  <%= flash[:notice] %>
</div>


<%= render 'info', user: @user, book: @book %>

<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, "/books/#{book.id}" %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
