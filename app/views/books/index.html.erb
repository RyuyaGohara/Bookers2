<h2>User info</h2>
  


<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<% @books.each do |book| %>
  <div>
    <p><%= image_tag 'no_image.jpg' %></p>
    <p>Title</p>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    <p>Opinion <%=book.body %></p>
  </div>
<% end %>