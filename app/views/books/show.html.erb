<%= render 'users/info', user: @user, book: @book %>

<h2>Book detail</h2>
<table class="table">
  <tr>
    <td>
      <%= image_tag 'no_image.jpg' %>
      <br>user name
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
</table>

